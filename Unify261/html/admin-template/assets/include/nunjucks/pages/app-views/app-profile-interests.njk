{# Settings #}
{% set root = "../../" %}
{% set adminRoot = "../" %}
{% set title = "Profile - Interests" %}
{% set layoutTheme = "dark" %}
{% set isSubMenu4 = "unCollapsed" %}
{% set isSubMenu4Profiles = "unCollapsed" %}
{% set activeMenuItem = "app-profiles-interests" %}
{% set activeProfileMenuItem = "profile-interests" %}
{% set breadcrumbs = [
  {
    breadcrumb: "Dashboard",
    href: "#!"
  }, {
    breadcrumb: "App Views",
    href: "#!"
  }
] %}

{% include "html/assets/include/nunjucks/partials/head.njk" %}
{% include "html/assets/include/nunjucks/partials/core-fonts.njk" %}
{% include "html/assets/include/nunjucks/partials/core-css.njk" %}
{% include "html/assets/include/nunjucks/partials/core-icons.njk" %}

<link rel="stylesheet" href="{{ adminRoot }}assets/vendor/hs-admin-icons/hs-admin-icons.css">

<link rel="stylesheet" href="{{ root }}assets/vendor/animate.css">
<link rel="stylesheet" href="{{ root }}assets/vendor/malihu-scrollbar/jquery.mCustomScrollbar.min.css">

<link rel="stylesheet" href="{{ adminRoot }}assets/vendor/bootstrap-select/css/bootstrap-select.min.css">
<link rel="stylesheet" href="{{ adminRoot }}assets/vendor/multiselect/css/multi-select.css">

<link rel="stylesheet" href="{{ root }}assets/vendor/hamburgers/hamburgers.min.css">

{% include "html/admin-template/assets/include/nunjucks/partials/css/css-unify-admin.njk" %}
{% include "html/assets/include/nunjucks/partials/css/css-custom.njk" %}
</head>

<body>
<main>
  {% include "html/admin-template/assets/include/nunjucks/partials/blocks/headers/header-fixed.njk" %}

  <section class="container-fluid px-0 g-pt-65">
    <div class="row no-gutters g-pos-rel g-overflow-x-hidden">
      {% include "html/admin-template/assets/include/nunjucks/partials/blocks/sidebars/sidebar-static.njk" %}

      <div class="col g-ml-45 g-ml-0--lg g-pb-65--md">
        <div class="g-pa-20">
          <div class="row">
            <div class="col-md-3 g-mb-30 g-mb-0--md">
              {% include "html/admin-template/assets/include/nunjucks/partials/blocks/sidebars/sidebar-profile.njk" %}
            </div>

            <div class="col-md-9">
              <div class="g-pos-rel h-100 g-brd-around g-brd-gray-light-v7 g-rounded-4 g-pa-15 g-pa-30--md">
                <header>
                  <h2 class="text-uppercase g-font-size-12 g-font-size-default--md g-color-black mb-0">Your Interests</h2>
                </header>

                <hr class="d-flex g-brd-gray-light-v7 g-my-15 g-my-25--md">

                <form>
                  <label class="g-mb-15">Select Interests</label>

                  <div class="form-group g-pos-rel g-overflow-hidden g-brd-around g-brd-gray-light-v7 mb-0">
                    <select class="js-multi-select" multiple="multiple"
                      data-multiselect-class="u-multi-select--v1 u-multi-select--items-icons u-multi-select--items-lg u-multi-select--rounded-0 g-ma-minus-1"
                      data-multiselect-divider='<span class="g-absolute-centered--md d-block text-center g-font-size-18 g-color-gray-dark-v9 g-my-15 g-mt-25--md g-mb-0--md"><i class="g-pos-rel g-top-8 g-left-minus-3 hs-admin-arrow-left"></i><i class="g-pos-rel g-top-1 g-right-3 hs-admin-arrow-right"></i></span>'>
                      <option value="listItem1">Design</option>
                      <option value="listItem2">Development</option>
                      <option value="listItem3">Advertising</option>
                      <option value="listItem4">Lifestyle</option>
                      <option value="listItem5">Technology</option>
                      <option value="listItem6">Sports</option>
                      <option value="listItem7">Beauty &amp; Fashion</option>
                      <option value="listItem8" selected="selected">Html &amp; Css</option>
                      <option value="listItem9" selected="selected">JavaScript</option>
                      <option value="listItem10" selected="selected">C#</option>
                      <option value="listItem11" selected="selected">Ruby on Rails</option>
                      <option value="listItem12" selected="selected">Swift</option>
                      <option value="listItem13" selected="selected">Python</option>
                      <option value="listItem14" selected="selected">PHP</option>
                    </select>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>

        {% include "html/admin-template/assets/include/nunjucks/partials/blocks/footers/footer-sticky.njk" %}
      </div>
    </div>
  </section>
</main>

{% include "html/admin-template/assets/include/nunjucks/partials/core-js.njk" %}

<script src="{{ root }}assets/vendor/appear.js"></script>
<script src="{{ root }}assets/vendor/malihu-scrollbar/jquery.mCustomScrollbar.concat.min.js"></script>

<script src="{{ adminRoot }}assets/vendor/bootstrap-select/js/bootstrap-select.min.js"></script>
<script src="{{ adminRoot }}assets/vendor/multiselect/js/jquery.multi-select.js"></script>

<!-- JS Unify -->
<script src="{{ root }}assets/js/hs.core.js"></script>

<script src="{{ root }}assets/js/components/hs.scrollbar.js"></script>
<script src="{{ root }}assets/js/components/hs.dropdown.js"></script>
<script src="{{ root }}assets/js/helpers/hs.hamburgers.js"></script>
<script src="{{ adminRoot }}assets/js/components/hs.side-nav.js"></script>
<script src="{{ adminRoot }}assets/js/components/hs.multi-select.js"></script>

<!-- JS Custom -->
<script src="{{ root }}assets/js/custom.js"></script>

<!-- JS Plugins Init. -->
<script>
  $(document).on('ready', function () {
    // initialization of custom scrollbar
    $.HSCore.components.HSScrollBar.init($('.js-custom-scroll'));

    // initialization of HSDropdown component
    $.HSCore.components.HSDropdown.init($('[data-dropdown-target]'), {dropdownHideOnScroll: false});

    // initialization of hamburger
    $.HSCore.helpers.HSHamburgers.init('.hamburger');

    // initialization of sidebar navigation component
    $.HSCore.components.HSSideNav.init('.js-side-nav');

    // initialization of custom select
    $('.js-select').selectpicker();

    // initialization of custom multi select
    $.HSCore.components.HSMultiSelect.init('.js-multi-select', {
      selectableHeader: '<h3 class="u-heading-v1-4 g-top-100x--before g-left-50x--before g-font-weight-400 g-font-size-default g-brd-top g-brd-gray-light-v7 g-px-20 g-py-20 mb-0">Categories</h3>',
      selectionHeader: '<h3 class="g-font-weight-400 g-font-size-default g-brd-top g-brd-gray-light-v7 g-px-20 g-py-20 mb-0">Selected</h3>'
    });
  });
</script>
</body>
</html>
